<?xml version = "1.0" encoding = "UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
   http://www.springframework.org/schema/util
      http://www.springframework.org/schema/util/spring-util.xsd">
      
	<bean id="sabaMain" class="com.placebo.sababot.SabaMain">
		<property name="sabaBot" ref="sabaBot" />
	</bean>
	
	<bean id="sabaBot" class="com.placebo.sababot.bots.SabaBot">
		<property name="strategyMap" ref="strategyMap" />
	</bean>

	<util:map id="strategyMap">
		<entry key="PHOTO" value-ref="uploadPhoto" />
		<entry key="AUDIO" value-ref="uploadAudio" />
	</util:map>

	<bean id="uploadPhoto" class="com.placebo.sababot.utils.UploadPhotoStrategy" />
	<bean id="uploadAudio" class="com.placebo.sababot.utils.UploadAudioStrategy" />
	
</beans>